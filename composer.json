{
    "name": "drealecs/thread-worker",
	"type": "library",
	"description": "PHP multi-thread worker message based library",
	"keywords": ["thread", "worker", "asynchronous", "multithread", "threads"],
    "license": "MIT",
	"authors": [
        {
            "name": "Alexandru Patranescu",
            "email": "drealecs@gmail.com"
        }
	],
    "require": {
        "php": ">=5.3.0",
        "ext-redis": "*",
        "rhumsaa/uuid": "2.5.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "ThreadWorker": "lib/"
        }
    },
    "bin": [
        "bin/worker",
        "bin/worker.php"
    ],
    "config": {
        "use-include-path": true
    }
}
